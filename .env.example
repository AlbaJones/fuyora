# Database
DATABASE_URL=postgres://localhost/fuyora_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-here
COOKIE_SECRET=your-cookie-secret-here

# S3 Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fuyora-uploads
AWS_S3_ENDPOINT=https://s3.amazonaws.com
AWS_S3_FORCE_PATH_STYLE=true

# Presigned URL settings
PRESIGN_TTL_SECONDS=900
MAX_UPLOAD_BYTES=10000000

# CORS
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:7000,http://localhost:7001

# Email / SMTP (optional - leave empty to disable email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@fuyora.com

# Stripe Payment Integration (Platform Account ONLY - No Stripe Connect)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PLATFORM_FEE_PERCENTAGE=10

# Withdrawal Settings
MIN_WITHDRAWAL_AMOUNT=10

# Frontend URLs
FRONTEND_URL=http://localhost:3000
